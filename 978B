#include <iostream>

using namespace std;

int main()
{
    int a, xCount = 0, xDel = 0 ;
    cin>>a;
    string f;
    cin>>f;
    for(int i=0; i<a; i++){
        if(f[i]=='x')
            xCount++;
        else
            xCount = 0;
        if(xCount>=3)
            xDel++;
    }
    cout<<xDel;
    return 0;
}
